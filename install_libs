echo "Installing libs with brew =>"

# memcached
brew install libevent
brew install memcached

# databases
brew install sqlite
brew install mysql
brew install sphinx

# setup mysql to boot on launch
sudo mkdir -p /Library/LaunchDaemons
sudo cp /usr/local/Cellar/mysql/5.1.38/com.mysql.mysqld.plist /Library/LaunchDaemons
sudo chown root /Library/LaunchDaemons/com.mysql.mysqld.plist
launchctl load -w /Library/LaunchDaemons/com.mysql.mysqld.plist

# amazon ec2
brew install ec2-api-tools

# graphics
brew install imagemagick

echo "Done"

