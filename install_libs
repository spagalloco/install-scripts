echo "Installing libs with brew =>"

# memcached
brew install libevent
brew install memcached

# sqlite
brew install sqlite

# setup mysql to boot on launch
brew install mysql
mysql_install_db
mkdir -p ~/Library/LaunchAgents
cp /usr/local/Cellar/mysql/5.1.41/com.mysql.mysqld.plist ~/Library/LaunchAgents/

# sphinx
brew install sphinx

# amazon ec2
brew install ec2-api-tools

# graphics
brew install imagemagick

# gist
brew install git

# mongodb
brew install mongodb
mkdir -p /data/db

# redis
brew install redis
mkdir -p /var/db/redis

echo "Done"

